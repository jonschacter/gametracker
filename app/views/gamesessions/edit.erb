<h1>Edit Session</h1>

<form action="/gamesessions/new" method="POST">
    <label for="date">Date (YYYY-MM-DD): </label>
    <input type="text" id="date" name="gamesession[date]" value="<%= @gamesession.date %>"><br>
    <h3>Game Info</h3>
    <label for="game_dropdown">New or Existing Game?</label>
    <select id="game_dropdown" name="game[name]">
        <option value="New">New</option>
        <% @games.each do |game| %>
            <option value="<%= game.name %>" <% if @gamesession.game.name == game.name %>selected<% end %>><%= game.name %></option>
        <% end %>
    </select><br>
    <label for="new_game_name">Game Name (if New):</label>
    <input type="text" id="new_game_name" name="new_game[name]"><br>
    <label for="type">Game Type (if New):</label>
    <select id="type" name="new_game[type]">
        <option value="Board">Board</option>
        <option value="Video">Video</option>
        <option value="Card">Card</option>
        <option value="Dice">Dice</option>
        <option value="Other" selected>Other</option>
    </select><br>
    <h3>Player Info</h3>
    <p>Player Names: (Use "Me" for yourself)</p>
    <input type="text" name="gamesessions[players][]" value="Me">
    Winner? <input type="radio" name="gamesession[winner]" value="<%= @counter %>" <% if @gamesession.winner.name == "Current User" %>checked<% end %>>
    <br>
    <% @counter = 2 %>
    <% 7.times do %>
        <input type="text" name="gamesession[players][]"
        <% if @gamesession.players[@counter - 1] %>
            value="<%= @gamesession.players[@counter - 1].name %> ">
            Winner?  <input type="radio" name="gamesession[winner]" value="<%= @counter %>" <% if @gamesession.players[@counter - 1].id == @gamesession.winner_id %>checked<% end %>>
            <br>
        <% else %>
            placeholder="Player <%= @counter %>"> 
            Winner? <input type="radio" name="gamesession[winner]" value="<%= @counter %>">
            <br>
        <% end %>
        <% @counter += 1 %>
    <% end %>
    <input type="submit" value="Edit">
</form>
