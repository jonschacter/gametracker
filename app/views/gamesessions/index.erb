<h1><%= @user.first_name %>'s Game Sessions</h1>

<% @gamesessions.each do |gamesession| %>
    <h3><a href="/gamesessions/<%= gamesession.id %>"><%= gamesession.game.name %> - <%= gamesession.format_date %></a></h3>
    <% gamesession.players.each do |player| %>
        <% if player.name == "Current User" %>
            <p>Me
                <% if player.id == gamesession.winner_id %>
                    - WINNER!
                <% end %>
            </p>
        <% else %>
            <p><%= player.name %>
                <% if player.id == gamesession.winner_id %>
                    - WINNER!
                <% end %>
            </p>
        <% end %>
    <% end %>
<% end %>

<a href="/gamesessions/new">New Session</a><br>
<a href="/home">Home</a><br>
<a href="/logout">Log Out</a>